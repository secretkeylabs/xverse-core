{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "types/*": ["./types"],
      "currency/*": ["./currency"],
      "transactions/*": ["./transactions"],
      "wallet/*": ["./wallet"],
      "stacking/*": ["./stacking"],
      "account/*": ["./account"],
      "gaia/*": ["./gaia"],
    },
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  },
  "exclude": [
    "./tests",
  ],
}
